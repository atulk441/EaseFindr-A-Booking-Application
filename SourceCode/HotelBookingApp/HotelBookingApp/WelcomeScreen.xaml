<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelBookingApp.WelcomeScreen"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="https://static1.bigstockphoto.com/2/0/2/large1500/202487899.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome" FontSize="70" HorizontalOptions="Center" TextColor="Blue" Margin="0,120,0,0"></Label>
            <Label Text="To" FontSize="70" HorizontalOptions="Center"  TextColor="Blue"></Label>
            <Label Text="EaseFindr" FontSize="70" HorizontalOptions="Center" TextColor="Blue"></Label>
            <Label Text="A Newer Way of Booking!" FontSize="20" TextColor="Red" HorizontalOptions="Center" Margin="0,-20,0,0"></Label>

            <Label Text="Click 'Next' to continue or 'About' to know more about!" FontSize="15" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,218,0,0"></Label>
            <Button Text="Next >>" Clicked="bt_next" FontSize="30" Background="Red" ></Button>
            <Button Text="About...." Clicked="bt_about" FontSize="30" Background="Red"></Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>